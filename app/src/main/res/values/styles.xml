<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeChat" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/lime</item>
        <item name="colorPrimaryDark">@color/lime_dark</item>
        <item name="colorAccent">@color/lime</item>
    </style>

    <style name="ThemeFriend" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/yellow</item>
        <item name="colorPrimaryDark">@color/yellow_dark</item>
        <item name="colorAccent">@color/yellow</item>
    </style>

    <style name="ThemeGallery" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryDark">@color/blue_dark</item>
        <item name="colorAccent">@color/blue</item>
    </style>

    <style name="ThemeMap" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/dark_blue</item>
        <item name="colorPrimaryDark">@color/darkblue_dark</item>
        <item name="colorAccent">@color/dark_blue</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--<style name="ThemeMusic" parent="Theme.AppCompat.Light">-->
        <!--<item name="colorPrimary">@color/green</item>-->
        <!--<item name="colorPrimaryDark">@color/green_dark</item>-->
        <!--<item name="colorAccent">@color/green</item>-->
    <!--</style>-->

    <style name="ThemeMusic" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryDark">@color/green_dark</item>
        <item name="colorAccent">@color/green</item>
    </style>

    <style name="ThemeSetting" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/violet</item>
        <item name="colorPrimaryDark">@color/violet_dark</item>
        <item name="colorAccent">@color/violet</item>
    </style>

    <style name="ThemeTimeline" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/red</item>
    </style>

    <style name="ThemeWhether" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/darkviolet</item>
        <item name="colorPrimaryDark">@color/darkviolet_dark</item>
        <item name="colorAccent">@color/darkviolet</item>
    </style>

</resources>
